<Page x:Class="VLT.SortByProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
	Title="SortByProgressPage">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Height="109" HorizontalAlignment="Left" Margin="400,135,0,0" Name="sortByBorder" VerticalAlignment="Top" Width="400">
            <TextBlock Height="109" Name="sortByText" Text="Sort By:" Width="400" FontSize="72" TextAlignment="Center" />
        </Border>
        <Button Content="Date" Height="70" HorizontalAlignment="Left" Margin="450,341,0,0" Name="dateButton" VerticalAlignment="Top" Width="300" FontSize="40" Click="dateButton_Click" />
        <Button Content="Exercise" Height="70" HorizontalAlignment="Left" Margin="450,507,0,0" Name="exerciseButton" VerticalAlignment="Top" Width="300" FontSize="40" Click="exerciseButton_Click" Opacity="0.33" />
    </Grid>
</Page>
